<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <%- include("./header.ejs"); %>

    <main>
      <!-- Landing section -->
      <section class="landing-banner">
        <div class="container">
          <div class="landing-flex">
            <div class="landing-oneside">
              <h2>Great minds are built on great books.</h2>
              <p>This web application was created to fulfill Web Technology moduleâ€™s requirements and does not represent an actual company or service</p>
              <button class="landing-btn">
                <svg class="svgIcon" viewBox="0 0 512 512" height="1em" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm50.7-186.9L162.4 380.6c-19.4 7.5-38.5-11.6-31-31l55.5-144.3c3.3-8.5 9.9-15.1 18.4-18.4l144.3-55.5c19.4-7.5 38.5 11.6 31 31L325.1 306.7c-3.2 8.5-9.9 15.1-18.4 18.4zM288 256a32 32 0 1 0 -64 0 32 32 0 1 0 64 0z"
                  ></path>
                </svg>
                Explore
              </button>
            </div>
            <div class="landing-img">
              <img src="/images/home-character.png" alt="" />
            </div>
          </div>
        </div>
      </section>

      <!-- Books section -->
      <section>
        <div class="container">
          <div>
            <h3 class="section-title">Click, Read and Review it</h3>
            <div class="flex-books">
              <!--  -->
              <% books.forEach(book => { %>
              <div class="card">
                <a href="/detail/<%= book._id %>">
                  <div class="card-img">
                    <img src="<%= book.image %>" alt="Cover" />
                  </div>
                  <h3 class="book-title"><%= book.title %></h3>
                  <span class="author"><%= book.author %></span>
                </a>
              </div>
              <% }) %>
              <!--  -->
            </div>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <%- include("./footer.ejs"); %>
    </main>
  </body>
</html>
